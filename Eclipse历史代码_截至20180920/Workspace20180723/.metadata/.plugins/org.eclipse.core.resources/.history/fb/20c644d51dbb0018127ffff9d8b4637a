#!/usr/bin/env python
# coding=utf-8

from sqlalchemy import create_engine

import pandas as pd


class ShowBW1(object):
    def __init__(self):
        self.engine = create_engine(
            'mysql+pymysql://ops:ops!@#9988@47.74.249.179:3308/david')

    def _start(self):
        self.__con = self.engine.connect()

    def _stat(self):
        '''选出最近时间的数据
        '''
        query = """SELECT * FROM david.BW1_BASE_DATA WHERE ts = 
        (SELECT DISTINCT ts FROM david.BW1_BASE_DATA ORDER BY ts DESC LIMIT 1);
        """
        res = self.__con.execute(query).fetchall()
        print(res)

    def _end(self):
        self.__con.close()

    def main(self):
        self._start()
        self._stat()
        self._end()


if __name__ == '__main__':
    obj = ShowBW1()
    obj.main()
